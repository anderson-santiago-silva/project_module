<form action="/pets" method="get">
    <input type="text" name="petName" placeholder="Serch by name">
    <button type="submit">Search Pets</button>
</form>
  
{{#if pets}}
    {{#each pets}}
        <div>
            <a href="/pets/{{this._id}}">
                <h3>{{this.name}}</h3>
                <img src="{{this.image}}" alt="{{this.name}} photo">
            </a>
        </div>
    {{/each}}
{{else}}
    <h1>No pets found!</h1>
{{/if}}